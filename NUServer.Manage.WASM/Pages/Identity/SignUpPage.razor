@layout EmptyLayout
@page "/signup"

<PageTitle>SignUpPage</PageTitle>

<div class="text-center identity-page">
    <FormComponent class="form-signin" Model="requestData" OnSubmit="onSubmit">
        <h1 class="h3 mb-3 font-weight-normal">Sign up</h1>

        <ValidationSummary></ValidationSummary>

        <label class="sr-only">Name</label>
        <input class="form-control" placeholder="Name" required="" autofocus="" @bind-value="requestData.Name">

        <label for="inputEmail" class="sr-only">Email address</label>
        <input type="email" id="inputEmail" class="form-control" placeholder="Email address" required="" autofocus="" @bind-value="requestData.Email">

        <label for="inputPassword" class="sr-only">Password</label>
        <input type="password" id="inputPassword" class="form-control" placeholder="Password" required="" @bind-value="requestData.Password">

        <label class="sr-only">Confirm Password</label>
        <input type="password" class="form-control" placeholder="Confirm Password" required="" @bind-value="requestData.ConfirmPassword">
        @* <div class="checkbox mb-3">
        <label>
        <input type="checkbox" value="remember-me"> Remember me
        </label>
        </div> *@
        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign up</button>
        <p class="mt-5 mb-3 text-muted">© @DateTime.Now.Year</p>
    </FormComponent>
</div>